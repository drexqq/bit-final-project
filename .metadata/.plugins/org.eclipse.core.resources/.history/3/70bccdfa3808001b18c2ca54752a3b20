<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="demo.a.b.dao.UserDao">

 <select id="login" parameterType="com.bit.paperhouse.UserDto" resultType="com.bit.paperhouse.UserDto">
  SELECT *
  FROM MEM
  WHERE ID = #{id}
  AND PWD = #{pwd}
</select>

<select id="regi" parameterType="com.bit.paperhouse.UserDto">
  INSERT INTO USERTABLE2(ID, PASSWORD, NAME, AUTHORITY, ENABLED)
  VALUES(#{id}, #{pwd}, #{name}, #{authority}, 1)
</select> 

<select id="findByid" resultType="com.bit.paperhouse.model.CustomSecuDetails">
   SELECT *
   FROM USERTABLE2
   WHERE ID = #{username}
</select>

</mapper>