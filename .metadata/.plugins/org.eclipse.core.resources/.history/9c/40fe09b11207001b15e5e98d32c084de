<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.MemberDao">

<select id="login" parameterType="com.example.demo.dto.MemberDto" resultType="com.example.demo.dto.MemberDto">
  SELECT *
  FROM MEM
  WHERE ID = #{id}
  AND PWD = #{pwd}
</select>

<select id="regi" parameterType="com.example.demo.dto.MemberDto">
  INSERT INTO MEM(ID, PWD, EMAIL, NAME, ROLE)
  VALUES(#{id}, #{pwd}, #{email}, #{name}, #{role})
</select>

<select id="findByid" resultType="com.example.demo.dto.MemberDto">
   SELECT *
   FROM MEM
   WHERE ID = #{id}
</select>
</mapper>